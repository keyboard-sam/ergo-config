#define DEFAULT 0
#define LOWER   1
#define FUNC    2

/ {
	keymap {
		compatible = "zmk,keymap";
		layer_0 {
			bindings = <
	&kp ESC    &kp NUM_1  &kp NUM_2  &kp NUM_3  &kp NUM_4  &kp NUM_5  &kp LPAR      &kp RPAR     &kp NUM_6  &kp NUM_7  &kp NUM_8  &kp NUM_9  &kp NUM_0  &kp BSLH
	&kp TAB    &kp Q      &kp W      &kp E      &kp R      &kp T      &kp LBKT      &kp RBKT     &kp Y      &kp U      &kp I      &kp O      &kp P      &kp BSLH
	&kp CAPS   &kp A      &kp S      &kp D      &kp F      &kp G                                 &kp H      &kp J      &kp K      &kp L      &kp SCLN   &kp QUOT
	&kp LSFT   &kp Z      &kp X      &kp C      &kp V      &kp B      &kp TAB       &tog DEFAULT &kp N      &kp M      &kp CMMA   &kp DOT    &kp FSLH   &kp RSFT
	&kp LCTRL  &none      &none      &none      &kp LCTRL                                                   &none      &none      &none      &none      &kp RALT
	                                                       &kp LALT   &tog DEFAULT  &tog FUNC    &kp RALT
	                                            &kp SPC    &kp LCMD   &mo FUNC      &tog LOWER   &kp RCMD      &kp SPC
	                                                                  &mo LOWER     &kp NUM_6
			>;
		};
		layer_1 {
			bindings = <
	&kp GRAVE  &kp NUM_1  &kp NUM_2  &kp NUM_3  &kp NUM_4  &kp NUM_5    &kp LPAR        &kp RPAR        &kp NUM_6   &kp NUM_7  &kp NUM_8  &kp NUM_9  &kp NUM_0  &kp BSLH
