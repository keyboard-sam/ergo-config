	&kp LCTRL  &kp LEFT   &kp DOWN    &kp RIGHT  &kp F      &kp G                                       &kp H       &kp J      &kp UP     &kp L      &kp SCLN   &kp QUOT
	&kp LSFT   &kp Z      &kp X       &kp C      &kp V      &kp B       &kp TAB         &tog DEFAULT    &kp N       &kp LEFT   &kp DOWN   &kp RIGHT  &kp FSLH   &kp RSFT
	&kp LCTRL  &none      &none      &none      &kp LCTRL                                                           &none      &none      &none      &none      &kp RALT
	                                                        &kp LALT    &tog DEFAULT    &tog FUNC    &kp RALT
	                                            &kp SPC     &kp LCMD    &mo FUNC        &tog LOWER   &kp RCMD      &kp SPC
	                                                                    &mo LOWER       &kp NUM_6
			>;
		};
		layer_2 {
			bindings = <
	&kp GRAVE  &kp F1     &kp F2      &kp F3    &kp F4      &kp F5      &none           &none           &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &kp F11
	&none      &none      &kp UP      &none     &none       &none       &none           &none           &kp F1      &kp F2      &kp F3      &kp F4      &kp F5      &none
	&kp LCTRL  &kp LEFT   &kp DOWN    &kp RIGHT  &kp F      &kp G                                       &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &none
	&kp LSFT   &kp Z      &kp X       &kp C      &kp V      &kp B       &kp TAB         &tog DEFAULT    &kp F11     &kp F12     &kp F13     &kp F14     &kp F15     &none
	&kp LCTRL  &none      &none      &none      &kp LCTRL                                                           &none       &none       &none       &none       &kp RALT
	                                                        &kp LALT    &tog DEFAULT    &tog FUNC       &kp RALT
	                                            &kp SPC     &kp LCMD    &mo FUNC        &tog LOWER      &kp RCMD    &kp SPC
